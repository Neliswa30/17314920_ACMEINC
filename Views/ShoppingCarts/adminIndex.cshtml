@model IEnumerable<PROG7311_Task2.Models.AcmeIncTask2db.Cart>

@{
    ViewData["Title"] = "Index";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Product Id
            </th>
            <th>
                Product name
            </th>
            <th>
                Customer username
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pro.Proid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pro.ProName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsernameNavigation.Username)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
