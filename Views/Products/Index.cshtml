@model IEnumerable<PROG7311_Task2.Models.AcmeIncTask2db.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Welcome to ACME INC.</h1>

<form asp-action="index">
    <div class="form-group">
        <label class="control-label">Search for your Product</label>
        <input name="productName" class="form-control">
    </div>
    <div class="form-group">
        <input type="submit" value="Search" class="btn btn-primary" />
        <span class="text-danger">@ViewBag.productNotFound</span>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Product name
            </th>
            <th>
                Price
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProDescription)
            </td>
            <td>
                <a asp-action="cart" asp-route-id="@item.Proid">Add item to  cart</a>
            </td>
        </tr>
        }
    </tbody>
</table>

